{
  "name": "amex_tracker",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "description": "American Express rewards tracking application.",
  "author": "Logan Sherlock",
  "build": {
    "appId": "LoganSherlock.AmexTracker",
    "productName": "AmexTracker",
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "directories": {
      "output": "application"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"],
      "artifactName": "${productName}.${ext}"
    },
    "dmg": {
      "iconSize": "100",
      "iconTextSize": "12",
      "backgroundColor": "white",
      "contents": [
        { "x": 150, "y": 100, "type": "file" },
        { "x": 350, "y": 100, "type": "link", "path": "/Applications" }
      ],
      "window": { "width": 500, "height": 300 }
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": ["nsis"],
      "artifactName": "${productName}.${ext}"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["AppImage", "deb"],
      "artifactName": "${productName}.${ext}"
    }
  },
  "scripts": {
    "dev": "vite",
    "build:css": "tailwindcss -i src/index.css -o src/output.css --minify",
    "build": "npm run build:css && tsc && vite build && electron-builder --macos",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "electron .",
    "package": "electron-packager . AmexTracker --platform=darwin,win32 --arch=x64,arm64 --overwrite",
    "mac": "npm run build:css && tsc && vite build && electron-builder --macos",
    "windows": "npm run build:css && tsc && vite build && electron-builder --win --x64"
  },
  "dependencies": {
    "@fontsource-variable/gantari": "^5.2.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}
